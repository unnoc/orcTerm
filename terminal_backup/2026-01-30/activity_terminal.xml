<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¼‹"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="?attr/colorOnSurface" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_host"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/colorSurface" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.orcterm.ui.widget.TerminalKeypadView
            android:id="@+id/keypad_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?attr/colorSurfaceVariant"/>
            
        <com.orcterm.ui.widget.TerminalInputView
            android:id="@+id/input_command"
            android:layout_width="1px"
            android:layout_height="1px"
            android:background="@null"
            android:cursorVisible="false"
            android:textColor="@android:color/transparent"
            android:imeOptions="flagNoExtractUi|actionNone"
            android:inputType="textNoSuggestions|textVisiblePassword" />
    </FrameLayout>

</LinearLayout>
