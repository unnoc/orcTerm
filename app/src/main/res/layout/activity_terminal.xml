<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/terminal_termius_bg">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/terminal_termius_surface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="?attr/colorOnSurface" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"/>
    </LinearLayout>

    <!-- 终端容器 -->
    <FrameLayout
        android:id="@+id/container_host"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/terminal_termius_bg" />

    <!-- 底部输入区域 - 包含键盘和输入框 -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <!-- 虚拟键盘 -->
        <com.orcterm.ui.widget.TerminalKeypadView
            android:id="@+id/keypad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/terminal_termius_surface_variant" />

        <!-- 隐藏的输入框 - 用于接收输入法输入 -->
        <com.orcterm.ui.widget.TerminalInputView
            android:id="@+id/input_command"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_gravity="bottom|end"
            android:background="@null"
            android:cursorVisible="false"
            android:textColor="@android:color/transparent"
            android:imeOptions="flagNoExtractUi|actionNone"
            android:inputType="textNoSuggestions|textVisiblePassword" />

        <!-- Removed keyboard control bar -->
    </LinearLayout>

</LinearLayout>
