<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/Widget.OrcTerm.TopAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="0dp"
        android:stateListAnimator="@animator/m3_appbar_state_list_animator"
        app:titleTextColor="?attr/colorOnSurface" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- System Info -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_os_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_os_linux"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="系统信息"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btn_terminal_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_action_terminal"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/label_terminal"
                            android:padding="8dp"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <ImageButton
                            android:id="@+id/btn_docker_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_os_docker"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/label_docker"
                            android:padding="8dp"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <ImageButton
                            android:id="@+id/btn_file_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_action_folder"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/label_sftp"
                            android:padding="8dp"
                            app:tint="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>

                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:text="主机名称" android:layout_width="100dp" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        <TextView android:id="@+id/tv_hostname" android:text="Loading..." android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:text="发行版本" android:layout_width="100dp" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        <TextView android:id="@+id/tv_release" android:text="Loading..." android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingVertical="8dp">
                        <TextView android:text="主机地址" android:layout_width="100dp" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurfaceVariant"/>
                        <TextView android:id="@+id/tv_ip" android:text="Loading..." android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12sp" android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/label_system_monitor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
                <TextView
                    android:id="@+id/tv_monitor_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monitor_last_updated_default"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="4dp" />
                <ImageButton
                    android:id="@+id/btn_refresh"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_action_refresh"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_system_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_action_settings"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monitor_system_load"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_system_load"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1m 0.00  5m 0.00  15m 0.00"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_load"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cpu_load"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monitor_cpu_load"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="4dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_cpu"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:max="100"
                            android:progress="0"
                            app:indicatorSize="84dp"
                            app:indicatorInset="0dp"
                            app:trackThickness="8dp"
                            app:trackColor="?attr/colorSurfaceVariant" />

                        <TextView
                            android:id="@+id/tv_cpu_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_memory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_action_memory"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monitor_memory"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_mem"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:max="100"
                            android:progress="0"
                            app:indicatorSize="96dp"
                            app:indicatorInset="0dp"
                            app:trackThickness="9dp"
                            app:indicatorColor="@color/status_warning"
                            app:trackColor="?attr/colorSurfaceVariant" />

                        <TextView
                            android:id="@+id/tv_mem_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_mem_usage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="0.0 GB"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/tv_mem_detail_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_horizontal"
                        android:text="0% · 0.0 / 0.0 GB"
                        android:textSize="10sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_dashboard_network"
                            app:tint="?attr/colorOnSurfaceVariant"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monitor_net_speed"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:layout_marginStart="8dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="end">
                            <TextView
                                android:id="@+id/tv_net_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_net_realtime_default"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorPrimary"/>
                            <TextView
                                android:id="@+id/tv_net_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_net_down_default"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                            <TextView
                                android:id="@+id/tv_net_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_net_up_default"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                            <TextView
                                android:id="@+id/tv_net_total_traffic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_net_traffic_total_default"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_network"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_disk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_action_storage"
                                    app:tint="?attr/colorOnSurfaceVariant"/>
                                <TextView
                                    android:id="@+id/tv_disk_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/monitor_disk_space"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:layout_marginStart="8dp"
                                    android:background="?attr/selectableItemBackground"
                                    android:paddingStart="4dp"
                                    android:paddingEnd="4dp"
                                    android:clickable="true"
                                    android:focusable="true"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_disk_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75%"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_used_space"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_disk_used"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 GB"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="?attr/colorOnSurface"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_disk_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_disk_total_default"
                                android:textSize="12sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_disk_mount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/monitor_disk_mount_default"
                                android:textSize="11sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/chart_disk"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SSD"
                                android:textSize="10sp"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutline"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_disk_tree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textSize="10sp"
                        android:textColor="?attr/colorOnSurface"
                        android:text="lsblk output..."
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_process"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                app:cardBackgroundColor="?attr/colorSurface"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monitor_processes"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                        <TextView
                            android:id="@+id/tv_process_meta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/monitor_process_meta_default"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/layout_process_header"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/monitor_process_pid"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/monitor_process_name"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/tv_sort_cpu"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/monitor_process_cpu"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/tv_sort_mem"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/monitor_process_mem"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurfaceVariant"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:includeFontPadding="false"/>
                                <TextView
                                    android:id="@+id/tv_sort_conn"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
