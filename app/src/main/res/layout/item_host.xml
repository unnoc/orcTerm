<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Header: IP and Status -->
        <TextView
            android:id="@+id/tv_ip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="192.168.31.81"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_temperature"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45°C"
            android:textColor="#FF9800"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_latency"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_ip"/>

        <TextView
            android:id="@+id/tv_latency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 ms"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_status"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_ip"/>

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/bg_status_indicator"
            app:tint="#4CAF50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_ip"
            app:layout_constraintBottom_toBottomOf="@+id/tv_ip"/>

        <!-- Hardware Info Row -->
        <LinearLayout
            android:id="@+id/ll_hardware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_ip">

            <TextView
                android:id="@+id/tv_cores"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6 Cores"
                android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_action_memory"
                android:drawablePadding="4dp"
            android:drawableTint="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/tv_mem_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="11.2 G"
                android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_action_memory"
                android:drawablePadding="4dp"
            android:drawableTint="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/tv_disk_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="69.9 G"
                android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_action_storage"
                android:drawablePadding="4dp"
            android:drawableTint="?attr/colorOnSurfaceVariant"/>

            <TextView
                android:id="@+id/tv_uptime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="11 Hours"
                android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_action_refresh"
                android:drawablePadding="4dp"
            android:drawableTint="?attr/colorOnSurfaceVariant"/>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_hardware"/>

        <!-- Digital Mode Layout (Visible by default) -->
        <LinearLayout
            android:id="@+id/ll_monitor_digital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider">
            
            <TextView
                android:id="@+id/tv_cpu_digital"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="CPU: 1%"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="start"/>
                
            <TextView
                android:id="@+id/tv_mem_digital"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="MEM: 50%"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="start"/>
                
            <TextView
                android:id="@+id/tv_net_digital"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NET: 1.2K/s"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="start"/>
                
            <TextView
                android:id="@+id/tv_disk_digital"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="DISK: 0K/s"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="start"/>
        </LinearLayout>

        <!-- Linear Progress Mode Layout (Gone by default) -->
        <LinearLayout
            android:id="@+id/ll_monitor_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>
                <ProgressBar
                    android:id="@+id/progress_cpu_linear"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/progress_rounded"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginHorizontal="8dp"/>
                <TextView
                    android:id="@+id/tv_cpu_val_linear"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="MEM"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"/>
                <ProgressBar
                    android:id="@+id/progress_mem_linear"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="8dp"
                    android:progressDrawable="@drawable/progress_rounded"
                    android:progressTint="?attr/colorTertiary"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginHorizontal="8dp"/>
                <TextView
                    android:id="@+id/tv_mem_val_linear"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:gravity="end"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <TextView
                    android:id="@+id/tv_net_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="NET: 0 B/s"
                    android:textSize="11sp"
                    android:textColor="?attr/colorPrimary"/>
                <TextView
                    android:id="@+id/tv_disk_linear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DISK: 0 B/s"
                    android:textSize="11sp"
                    android:textColor="?attr/colorSecondary"
                    android:gravity="end"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Ring Chart Mode Layout (Gone by default) -->
        <LinearLayout
            android:id="@+id/ll_monitor_ring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <!-- CPU Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPU"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_cpu_ring"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </LinearLayout>

            <!-- Memory Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内存"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp"/>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/chart_mem_ring"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
            </LinearLayout>

            <!-- Network Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网络"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:text="↑"
                            android:textSize="8sp"
                            android:textColor="?attr/colorOnSurface"
                            android:background="@drawable/circle_outline_bg"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_net_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 K/s"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:text="↓"
                            android:textSize="8sp"
                            android:textColor="?attr/colorOnSurface"
                            android:background="@drawable/circle_outline_bg"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_net_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 K/s"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Disk Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="磁盘"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:text="R"
                            android:textSize="8sp"
                            android:textColor="?attr/colorOnSurface"
                            android:background="@drawable/circle_outline_bg"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_disk_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 B/s"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:text="W"
                            android:textSize="8sp"
                            android:textColor="?attr/colorOnSurface"
                            android:background="@drawable/circle_outline_bg"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tv_disk_write"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 B/s"
                            android:textSize="11sp"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Hidden Checkbox/More for compatibility logic -->
        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
            
        <ImageView
            android:id="@+id/btn_more_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_settings"
            android:padding="8dp"
            app:tint="?attr/colorOnSurfaceVariant"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
